apiURL = "www.fakewebsite.otis"

module.exports = (robot) ->
  robot.hear /(http|ftp|https)://([\w_-]+(?:(?:\.[\w_-]+)+))([\w.,@?^=%&:/~+#-]*[\w@?^=%&/~+#-])?/g, (msg) ->
    slackURL = msg.match[0]
    msg.reply "Meow, Uploading: #{slackURL}"

    robot.http(apiURL)
      .post(slackURL) (err, res, body) ->
        res.send "Otis has failed you"
